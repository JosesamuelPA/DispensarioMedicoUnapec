@model IEnumerable<DispensarioMedicoUnapec.Models.Ubicacion_Medicamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Ubicación Medicamentos</h1>

<p>
    <a asp-action="Create">Agregar nueva ubicación</a>
</p>
<table class="table table-bordered table-hover text-center">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Estante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tramo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoMedicamento)
            </th>
            <th>Gestionar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Estante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tramo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoMedicamento)
                </td>
                <partial name="_MenuOptions" model="item.Id" />

            </tr>
        }
    </tbody>
</table>
